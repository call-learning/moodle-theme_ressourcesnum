{{!
    Page navbar.

    Note that we use additionalinfo from the clboost template engine settings.
}}
<nav class="fixed-top navbar navbar-light bg-white navbar-expand moodle-has-zindex" aria-label="{{#str}}sitemenubar, admin{{/str}}">
    <div class="nav-left-region">
        {{# additionalinfo.isloggedin }}
            <div data-region="drawer-toggle" class="d-block">
                <button
                        aria-expanded="{{#navdraweropen}}true{{/navdraweropen}}{{^navdraweropen}}false{{/navdraweropen}}"
                        aria-controls="nav-drawer"
                        type="button" class="btn nav-link align-bottom d-inline-block"
                        data-action="toggle-drawer"
                        data-side="left"
                        data-preference="drawer-open-nav">{{#pix}}i/menubars{{/pix}}<span class="sr-only">{{#str}}sidepanel, core{{/str}}</span>
                </button>
            </div>
        {{/ additionalinfo.isloggedin }}
        {{^ additionalinfo.isloggedin }}
            {{> theme_ressourcesnum/rflogo }}
        {{/ additionalinfo.isloggedin }}
    </div>
    <div class="d-flex flex-row flex-grow-1 nav-main-content">
        <a href="{{{ config.wwwroot }}}" class="navbar-brand aabtn {{# output.should_display_navbar_logo }}has-logo{{/ output.should_display_navbar_logo }}">
             <span class="logo">
                  {{# additionalinfo.isloggedin }}
                      {{> theme_ressourcesnum/rflogo }}
                  {{/ additionalinfo.isloggedin }}
                 <img src="{{output.get_compact_logo_url}}" alt="{{sitename}}">
             </span>
            <span class="site-name d-none d-md-inline pl-3">{{{ additionalinfo.sitenamestyled }}}</span>
        </a>

        <ul class="navbar-nav d-none d-md-flex m-auto m-r-1 custom-menu justify-content-around">
            <!-- custom_menu -->
            {{{ output.mcms_menu }}}
            <!-- page_heading_menu -->
            {{{ output.page_heading_menu }}}
        </ul>
    </div>
    <ul class="nav navbar-nav ml-auto">
        <li class="d-none d-lg-block">
            {{{ output.search_box }}}
        </li>
        <!-- user_menu -->
        <li class="nav-item d-flex align-items-center">
            {{{ output.user_menu }}}
        </li>
    </ul>
    <!-- search_box -->
</nav>

